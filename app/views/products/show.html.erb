<h1> <%= @product.name %> </h1>

<% if @product.image.attached? %>
  <%= image_tag(@product.image) %>
<% end %>

<h2><%= @product.description %></h2>
<h1><%= @product.price %></h1>

<% if user_signed_in? && current_user.is_admin? %>
  <%= link_to("Edit Product", "/products/#{@product.id}/edit", class: "btn btn-primary") %>
  <%= link_to("Delete Product", "/products/#{@product.id}", method: :delete, data: {confirm: "Are you sure you want to delete this?"}, class: "btn btn-danger") %>
<% end %>

<%= form_tag("/cart", method: :post) do %>
  <%= hidden_field_tag(:product_id, @product.id) %>
  <%= submit_tag("Add to Cart", class: "btn btn-dark") %>
<% end %>